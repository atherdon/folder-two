extends layout

block content
  form#formSubmitVideo(name="formsubmit", method="post", action="/insert")
    .wizard-header
      h3.wizard-title Start and End points for Youtube videos
      h5 Want to share video with friend? But only short version with start and end point?

    .wizard-navigation
      ul
        li
          a(href='#details', data-toggle='tab') Youtube link
      
        li
          a(href='#captain', data-toggle='tab') Video Type
      
        li
          a(href='#description', data-toggle='tab') Extra Details

    .tab-content
      #details.tab-pane
        .row
          .col-sm-12
            h4.info-text Let&apos;s start with the basic details.
    
          .col-sm-10.col-sm-offset-1
            .input-group
              span.input-group-addon
                i.material-icons link
        
              .form-group.label-floating
                label.control-label Link 
                  small (required)
          
                input#inputUrl.form-control.input-lg(type="text", name="url")
          
                .hint Links like https://www.youtube.com/watch?v=WbIPHjHoYaA or  https://youtu.be/G1aSAQ1CibQ accepted
          
                span.material-input
                span.material-input


      #captain.tab-pane
        h4.info-text What type of video would you store? 
  
        .row
          .col-sm-10.col-sm-offset-1
            .col-sm-4
              .choice(data-toggle='wizard-radio', rel='tooltip', title='You will have ability to use minutes and seconds')
                input#inputVideoType1(type="radio", name="type_" value="1")
              
                .icon          
                  i.material-icons exposure_zero
          
                h4 Short video          
                h6  &lt; 10 minutes 
                                          
            .col-sm-4
              .choice(data-toggle='wizard-radio', rel='tooltip', title='Select this if want to use minutes only')
                input#inputVideoType2(type="radio", name="type_" value="2")
          
                .icon          
                  i.material-icons exposure_plus_1
          
                h4 Medium video          
                h6  &gt; 10 minutes 
      
            .col-sm-4
              .choice(data-toggle='wizard-radio', rel='tooltip', title='Select this option if you want to use 5 minutes time range')
                input#inputVideoType3(type="radio", name="type_" value="3")                
          
                .icon          
                  i.material-icons exposure_plus_2
          
                h4 Long video          
                h6  &gt; 30 minutes 
                        
      #description.tab-pane
        .row
                                    
          h6.info-text You can skip this step if you don&apos;t know time you want
          //- @todo add link with skip text to this title
                                    
          .col-sm-5.col-sm-offset-1
            .form-group
              label Start Time
              input#inputStart.form-control(type="text",  name="start")
              
    
          .col-sm-5
            .form-group
              label End
              input#inputEnd.form-control(type="text", name="end")
              
                                    
          .col-sm-10.col-sm-offset-1
            .form-group
              label Title
              input#inputTitle.form-control(type="text", name="title")
              
    
          .col-sm-6.col-sm-offset-1
            .form-group
              label Video description
              textarea#desc.form-control(rows='6', name="desc")              
    
          .col-sm-4
            .form-group
              label.control-label Example          
              p.description &quot;The room really nice name is recognized as being a really awesome room. We use it every sunday when we go fishing and we catch a lot. It has some kind of magic shield around it.&quot;

    .wizard-footer
      .pull-right
        input.btn.btn-next.btn-fill.btn-danger.btn-wd(type='button', name='next', value='Next')
        input#hiddenType(type="hidden", name="type", value="")










        input.btn.btn-finish.btn-fill.btn-danger.btn-wd(type='submit', name='finish', value='Finish')

      .pull-left
        input.btn.btn-previous.btn-fill.btn-default.btn-wd(type='button', name='previous', value='Previous')

      .clearfix

