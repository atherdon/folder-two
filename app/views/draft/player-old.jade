        input#inputVideoTypez(type="hidden", name="type_" value="#{type_}")
        input#inputStartz(type="hidden", name="start", value="#{start}")
        input#inputEndz(type="hidden", name="end", value="#{end}")
        input#inputTitlez(type="hidden", name="title", value="#{title}")
        input#descz(type="hidden", name="desc", value="#{desc}")
        input#slugz(type="hidden", name="slug", value="#{slug}")

        input#min(type="hidden", name="min", value="0")
        //-input#max(type="hidden", name="max", value="false")
        input#durationz(type="hidden", name="duration", value="false")

        button.btn.btn-next.btn-fill.btn-success.btn-wd#btnSubmit(type='submit') Edit 
