extends layoutplayer

block content
  .row
    .col-sm-12
      #hiddenPlayer.hide
      h2 #{title}
      br
      video#vid1.video-js.vjs-default-skin(controls='', width='680', height='290', data-setup='{ "techOrder": ["youtube"], "sources": [{ "type": "video/youtube", "src": "#{url}" }] }')  
        p.vjs-no-js
          | To view this video please enable JavaScript, and consider upgrading to a web browser
          | that 
          a(href='http://videojs.com/html5-video-support/', target='_blank') supports HTML5 video
      br  
      h3 #{desc}  
      br
      p start: #{start} end: #{end} type: #{type_} slug: #{slug}




      form#formSubmitVideo(name="formsubmit", method="post", action="/insert")
        input#inputUrl(type="hidden", name="url", value="#{url}")
        input#inputVideoType(type="hidden", name="type_" value="#{type_}")
        input#inputStart(type="hidden", name="start", value="#{start}")
        input#inputEnd(type="hidden", name="end", value="#{end}")
        input#inputTitle(type="hidden", name="title", value="#{title}")
        input#desc(type="hidden", name="desc", value="#{desc}")
        input#slug(type="hidden", name="slug", value="#{slug}")

        input#min(type="hidden", name="min", value="0")
        //-input#max(type="hidden", name="max", value="false")
        input#duration(type="hidden", name="duration", value="false")

        button.btn.btn-next.btn-fill.btn-danger.btn-wd#btnSubmit(type='submit') Publish
          //-i.material-icons 
          //-  get_app
          //Publish
          //-.ripple-container 


      form#formSubmitVideo2(name="formsubmit2", method="post", action="/edit")
